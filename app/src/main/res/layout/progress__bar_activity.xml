<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/progress_bar_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="99px"
        android:max="100"
        />

    <Button
        android:id="@+id/button_Hide_Show_ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐藏/显示进度条"/>

    <Button
        android:id="@+id/button_Increase_ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="增加进度条进度"/>

    <Button
        android:id="@+id/button_Show_ProgressBar_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弹出进度条提示框"/>

</LinearLayout>
